<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#202125">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/satelliteHeaderLinearLayout1"
		android:layout_gravity="center"
		android:background="#FF222222">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Working..."
			android:textColor="#448AFF"
			android:shadowColor="#101010"
			android:shadowRadius="2.0"
			android:shadowDx="2.0"
			android:shadowDy="2.0"
			android:layout_gravity="center"
			android:gravity="center"
			android:padding="3px"
			android:id="@+id/satellitelistTextViewVisible"
			android:textSize="14sp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Working..."
			android:textColor="#448AFF"
			android:shadowColor="#101010"
			android:shadowRadius="2.0"
			android:shadowDx="2.0"
			android:shadowDy="2.0"
			android:layout_gravity="center"
			android:gravity="center"
			android:id="@+id/satellitelistTextViewUse"
			android:textSize="14sp"
			android:padding="3px"/>

		<ProgressBar
			android:id="@+id/progressBar2"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="10px"
			android:layout_centerInParent="true"
			android:indeterminate="true"
			android:indeterminateBehavior="cycle"
			android:indeterminateOnly="true"
			android:indeterminateTint="#2d84ff"
			android:indeterminateTintMode="src_in"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="5px"
		android:background="#171717"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:background="#FF222222">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#696969"
			android:shadowColor="#101010"
			android:shadowRadius="2.0"
			android:shadowDx="2.0"
			android:shadowDy="2.0"
			android:layout_gravity="center"
			android:gravity="center"
			android:id="@+id/satelliteSort"
			android:textSize="7sp"
			android:layout_weight="1.0"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="#191919"
			android:gravity="center">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Svid"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.1"
				android:layout_margin="1dp"
				android:background="#212121"
				android:id="@+id/textView_Header_Svid"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Группа спутников"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.0"
				android:layout_margin="1dp"
				android:background="#212121"
				android:id="@+id/textView_Header_ConstellationType"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Несущая частота МГц"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.0"
				android:layout_margin="1dp"
				android:id="@+id/textView_Header_CarrierFrequencyHz"
				android:background="#212121"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="ОНПШ"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.0"
				android:layout_margin="1dp"
				android:background="#212121"
				android:id="@+id/textView_Header_DbHz"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Высота"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.0"
				android:layout_margin="1dp"
				android:background="#212121"
				android:id="@+id/textView_Header_ElevationDegrees"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="Азимут"
				android:gravity="center"
				android:padding="2dp"
				android:textColor="#FE5723"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:shadowColor="#101010"
				android:layout_weight="1.0"
				android:layout_margin="1dp"
				android:background="#212121"
				android:id="@+id/textView_Header_AzimuthDegrees"/>

		</LinearLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="5px"
		android:background="#171717"/>

	<ListView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="#000000"
		android:dividerHeight="2dp"
		android:id="@+id/satellitelistListView1"/>

</LinearLayout>

